<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--https://developer.android.com/guide/topics/ui/settings -->
    <PreferenceCategory
        android:title="Configuración de usuario y database">

        <EditTextPreference
            android:defaultValue="192.168.10.114"
            android:key="url_db1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Url de la database" />

        <EditTextPreference
            android:defaultValue="databaseName"
            android:key="name_db1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Nombre de la database" />
        <EditTextPreference
            android:defaultValue="usuario"
            android:key="user_name1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Nombre de usuario" />
        <EditTextPreference
            android:defaultValue="usuariopass"
            android:key="user_pass1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Contraseña de usuario" />

        <ListPreference

            android:defaultValue='1'
            android:entries="@array/updateInterval"
            android:entryValues="@array/updateInterval"
            android:key="list_preference"
            android:title="List preference" />
    </PreferenceCategory>
</PreferenceScreen>